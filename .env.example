# My Dummy Travel API Configuration Template
# Copy this file to .env.local and fill in the actual values

# API Configuration
NEXT_PUBLIC_API_BASE_URL=your_api_base_url_here
NEXT_PUBLIC_API_VERSION=api

# Authentication
# Replace with your actual authentication token
NEXT_PUBLIC_API_TOKEN=your_bearer_token_here

# API Endpoints
NEXT_PUBLIC_ARTICLES_ENDPOINT=/api/articles
NEXT_PUBLIC_COMMENTS_ENDPOINT=/api/comments
NEXT_PUBLIC_CATEGORIES_ENDPOINT=/api/categories
NEXT_PUBLIC_AUTH_ENDPOINT=/api/auth
NEXT_PUBLIC_UPLOAD_ENDPOINT=/api/upload

# Pagination defaults
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_DEFAULT_PAGE=1

# Third-party services
# Cloudinary configuration (if needed for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Development settings
NODE_ENV=development